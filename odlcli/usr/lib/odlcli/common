  local RETVAL=0
  get_config "CAPABILITY_CONTENT"
  RETVAL=$?
  [[ ${CONFIG_VALUE} == "0" && ${RETVAL} -eq 0 ]] || RETVAL=1
  return ${RETVAL}
}

